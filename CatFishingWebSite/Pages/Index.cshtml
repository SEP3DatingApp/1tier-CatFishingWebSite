@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";


}

<!--Welcome page and log in-->
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>CatFishIndex</title>
    <link href="../wwwroot/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="../wwwroot/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p> </p>
                <div class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/images/dateimg3.jfif">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/dateimg4.jfif">
                        </div>
                        <div class="carousel-item">
                            <img src="~/images/dateimg5.jfif">
                        </div>
                    </div>

                </div>

            </div>

            <div id="login-div" class="col-md-6">
                <form asp-page-handler="login" method="post" class="login-form">
                    <h4>Log in</h4>

                    <div class="form-group">
                        @* <label asp-for="user.Username" class="control-label"></label> *@
                        <input type="text" asp-for="user.Username" class="form-control" placeholder="Username" />
                        <span data-placeholder="Username" class="span-label"></span>
                        <span asp-validation-for="user.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="user.Password" class="control-label"></label>*@
                        <input type="password" asp-for="user.Password" class="form-control" placeholder="Password" />
                        <span data-placeholder="Password" class="span-label"></span>
                        <span asp-validation-for="user.Password" class="text-danger">  @Model.errorMessage</span>
                    </div>

                    <div class="bottom-text">
                        Don't have an account? <a asp-page="/Signup/index">Sign up</a>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Start Fishing!" class="btn btn-primary" />

                    </div>

                </form>   
            </div>
        </div>

    </div>

</body>
</html>
